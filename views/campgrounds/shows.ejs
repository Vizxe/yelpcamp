    <% layout('/layouts/boilerplate') %>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3">
            <img src="<%=campground.image%>">
            <div class="card-body">
              <h5 class="card-title"><%=campground.title%></h5>
              <p class="card-text"><%=campground.description%></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item text-muted"><%=campground.location%></li>
              <li class="list-group-item">$<%=campground.price%>/night</li></ul>
            <div class="card-body">
                <a class="card-link btn btn-warning btn-sm" href="/campgrounds/<%=campground._id%>/edit">Edit Campground</a>
                <a class="card-link btn btn-success btn-sm mr-3" href="/campgrounds">All Campgrounds</a>
                <form action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST" class="d-inline">
                    <button class="card-link btn btn-danger btn-sm">Delete</button>
                </form>
            </div>
          </div>
          <h4 class="text-muted my-3">Leave a review!</h4>
          <form action="" class="mb-3">
            <div class="mb-3">
              <label for="rating" class="form-label">Rating</label>
              <input type="range" class="form-range" name="review[rating]" id="rating" min = "1" max = "5">
            </div>
            <div class="mb-3">
              <label for="body" class="form-label">Review: </label>
              <textarea class="form-control" name="review[body]" id="body" cols="30" rows="5"></textarea>
            </div>
            <div>
              <button class="btn btn-success">Submit!</button>
            </div>
          </form>
    </div>
</div>

