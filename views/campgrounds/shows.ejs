    <% layout('/layouts/boilerplate') %>

<div class="row">
    <div class="col-6">
        <div class="card mb-3">
            <img src="<%=campground.image%>">
            <div class="card-body">
              <h5 class="card-title"><%=campground.title%></h5>
              <p class="card-text"><%=campground.description%></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">Submitted By: <%=campground.author.username%></li>
              <li class="list-group-item text-muted"><%=campground.location%></li>
              <li class="list-group-item">$<%=campground.price%>/night</li>
            </ul>
            <%if (theUser && campground.author.equals(theUser._id)) {%>
              <div class="card-body">
                <a class="card-link btn btn-warning btn-sm" href="/campgrounds/<%=campground._id%>/edit">Edit Campground</a>
                <a class="card-link btn btn-success btn-sm mr-3" href="/campgrounds">All Campgrounds</a>
                <form action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST" class="d-inline">
                    <button class="card-link btn btn-danger btn-sm">Delete</button>
                </form>
             </div>
            <%}%>
          </div>
    </div>
    <div class="col-6">
      <%if (theUser) {%>
      <h4 class="text-muted my-3">Leave a review!</h4>
      <form action="/campgrounds/<%=campground._id%>/reviews" method="POST" class="mb-3 validated-form" novalidate>
        <div class="mb-3">
          <label for="rating" class="form-label">Rating</label>
          <input type="range" class="form-range" name="review[rating]" id="rating" min = "1" max = "5">
        </div>
        <div class="mb-3">
          <label for="body" class="form-label">Review: </label>
          <textarea class="form-control" name="review[body]" id="body" cols="30" rows="5" required></textarea>
          <div class="valid-feedback">
            Looks Good.
          </div>
          <div class="invalid-feedback">
            Review must have a body.
          </div>
        </div>
        <div> 
          <button class="btn btn-success">Submit!</button>
        </div>
      </form>
      <%}%>
      <% for(let review of campground.reviews) { %>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title">Rating: <%=review.rating%></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%=review.author.username%></h6>
          <p class="card-text"><%=review.body%></p>
          <form method="POST" action="/campgrounds/<%=campground._id%>/reviews/<%=review._id%>?_method=DELETE">
            <button class="btn btn-sm btn-danger">Delete</button>
          </form>
        </div>
      </div>
      <% } %>
    </div>
</div>

